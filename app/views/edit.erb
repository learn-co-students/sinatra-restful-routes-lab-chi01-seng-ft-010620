<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <p> <label for="recipe-name">Name</label>
    <input type="text" name="recipe[name]" id="name" value="<%= @recipe.name %>"></p>
    <p> <label for="ingredients">Ingredients</label>
    <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>"></p>
    <p> <label for="recipe-cook-time">Cook Time</label>
    <input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>"></p>
    <p> <input type="submit" id="submit"></p>
</form>